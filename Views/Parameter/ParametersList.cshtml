@model List<ControlParameter>

@{
    Language lang = Locale.Language;
    ViewBag.Title = lang.ParameterListTitle;
    Layout = "_Layout";
}
<html>
<body>
<div>
    <h4>@lang.ParameterListLabel</h4>
    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var parameter in Model)
            {
                <li>
                    <a asp-area="" asp-controller="Parameter" asp-action="EditParameter" asp-route-id="@parameter.id">@parameter.name</a>
                </li>
            }
        </ul>
    }
    else
    {
        <h3>@lang.ParameterListNoLabel</h3>
    }
    <a asp-area="" asp-controller="Parameter" asp-action="AddParameter">@lang.ParameterListAddButton</a>
</div>
</body>
</html>