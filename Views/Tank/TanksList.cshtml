@model List<Tank>

@{
    ViewBag.Title = "Tanks list";
    Layout = "_Layout";
}
<html>
<body>
<div>
    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var tank in Model)
            {
                <li>
                    <a asp-area="" asp-controller="Tank" asp-action="EditTank" asp-route-id="@tank.id">@tank.name</a>
                </li>
            }
        </ul>
    }
    else
    {
        <h3>No tanks now!</h3>
    }
    <a asp-area="" asp-controller="Tank" asp-action="AddTankPage">Add tank</a>
</div>
</body>
</html>