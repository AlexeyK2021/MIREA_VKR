<!DOCTYPE html>
@{ 
    Language lang = Locale.Language;
    ViewBag.Title = lang.AddPlcTitle;
    Layout = "_Layout";
    var tanks = ViewBag.tanks;
}
<html>
<body>
<div>
    <h4>@lang.AddPlcLabel</h4>
    <form method="post">
        <label for="model">@lang.AddPlcModel:</label><input type="text" name="model" id="model"/><br/>
        <label for="tank">@lang.AddPlcTank:</label>
        <select name="tankId" id="tank">
            @foreach (var tank in tanks)
            {
                <option value="@tank.id">@tank.name</option>
            }
        </select><br/>
        <label for="ip">@lang.AddPlcIp:</label><input type="text" name="ip" id="ip"/><br/>
        <label for="port">@lang.AddPlcPort:</label><input type="text" name="port" id="port"/><br/>
        <input type="submit" value="@lang.AddPlcAddButton"/>
    </form>
</div>
</body>
</html>