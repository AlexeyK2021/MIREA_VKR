@model List<opcUaWebMVC.Models.Database.Plc>

@{
    ViewBag.Title = "PLC list";
    Layout = "_Layout";
}
<html>
<head>
    <title>PLC List</title>
</head>
<body>
<div>
    @if (Model?.Count > 0)
    {
        <ul>
            @foreach (var plc in Model)
            {
                <li>
                    <a asp-area="" asp-controller="Plc" asp-action="EditPlc" asp-route-id="@plc.id">@plc.model - @plc.tank.name (@plc.ip:@plc.port)</a>
                    <ul>
                        @foreach (Sensor sensor in plc.sensors)
                        {
                            <il>@sensor.name (@sensor.model)</il>
                        }
                    </ul>
                </li>
            }
        </ul>
    }
    else
    {
        <h3>No plc now!</h3>
    }
    <a asp-area="" asp-controller="Plc" asp-action="AddPlcPage">Add PLC</a>
</div>
</body>
</html>