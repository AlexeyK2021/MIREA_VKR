@{
    ViewBag.Title = "Edit PLC";
    Layout = "_Layout";
    var tanks = ViewBag.tanks;
    var plc = ViewBag.plc;
}

<!DOCTYPE html>

<html>
<body>
<h4>Edit PLC</h4>
<form method="post">
    <label for="model">Model:</label>
    <input type="text" name="model" id="model" placeholder="PLC model" value="@plc.model" /><br/>

    <label for="tankId">Tank:</label>
    <select name="tankId" id="tankId">
        @foreach (var tank in tanks)
        {
            <option value="@tank.id">@tank.name</option>
        }
    </select><br/>

    <label for="ip">IP:</label><input type="text" name="ip" id="ip" placeholder="PLC IP address" value="@plc.ip"/><br/>
    <label for="port">Port:</label><input type="text" name="port" id="port" placeholder="PLC port" value="@plc.port"/><br/>
    <input type="hidden" name="id" value="@plc.id">
    <input type="submit" name="action" value="Save"/>
    <input type="submit" name="action" value="Delete"/>
</form>
</body>
</html>